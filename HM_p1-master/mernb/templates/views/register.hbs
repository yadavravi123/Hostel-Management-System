<body>
    <div class="container">
        <div class="title ">
            <h1>Welcome to Hostel Registration Portal</h1>
        </div>
        <div class="row">
            <div class="col-4">

            </div>
            <div class="col-8">
                <div class="content">
                    <form action="/register" method="post">
                        <div class="user-details ">
                            <div class="form-row row">
                                <div class="input-box form-group col-lg-6">
                                    <span class="details">Full Name :</span>
                                    <input class="form-control" type="text" placeholder="Enter your name"
                                        name="Full_name">
                                </div>

                                <div class="input-box form-group col-lg-6">
                                    <span class="details">Scholar Number :</span>
                                    <input class="form-control" type="number" placeholder="Enter your scholar number"
                                        name="Scholar_Number">
                                </div>

                                <div class="input-box form-group col-lg-6">
                                    <span class="details">Password :</span>
                                    <input class="form-control" type="password" placeholder="Enter the password"
                                        name="password">
                                </div>

                                <div class="input-box form-group col-lg-6">
                                    <span class="details">Confirm Password :</span>
                                    <input class="form-control" type="password" placeholder="Renter the password"
                                        name="confirm_password">
                                </div>


                            </div>



                            <div class="form-row row">
                                <div class="input-box form-group col-lg-6">
                                    <span class="details">Phone Number :</span>
                                    <input class="form-control" type="number" placeholder="Enter your number"
                                        name="Phone_no">
                                </div>

                                <div class="input-box form-group col-lg-6">
                                    <span class="details">Email :</span>
                                    <input class="form-control" type="email" placeholder="Enter your email"
                                        name="Email">
                                </div>
                            </div>


                            <div class="form-row row">
                                <div class="input-box form-group col-lg-6">
                                    <span class="details">DOB :</span>
                                    <input class="form-control" type="date" placeholder="Enter your date of birth"
                                        name="DOBs">
                                </div>

                                <div class="input-box form-group col-lg-6">
                                    <span class="details">Currently in Year:</span>
                                    <input class="form-control" type="number" placeholder="Currently in Year"
                                        name="Year_of_study">
                                </div>
                            </div>


                            <div class="form-row row">
                                <div class="input-box form-group col-lg-6">
                                    <span class="details">Course:</span>
                                    <select name="Course" class="form-select">
                                        <option value="Select your course">Select your course</option>
                                        <option value="CSE">CSE</option>
                                        <option value="ECE">ECE</option>
                                        <option value="MECH">MECH</option>
                                        <option value="CHEM">CHEM</option>
                                        <option value="MME">MME</option>
                                        <option value="ARCHI AND PLANNING">ARCHI AND PLANNING</option>
                                    </select>
                                </div>

                                <div class="gender-details form-group col-lg-6">
                                    <span class="gender-title">Gender :</span>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="Gender" id="exampleRadios1"
                                            value="Male">
                                        <label class="form-check-label" for="exampleRadios1">
                                            Male
                                        </label>
                                    </div>

                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" name="Gender" id="exampleRadios2"
                                            value="Female">
                                        <label class="form-check-label" for="exampleRadios2">
                                            Female
                                        </label>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <!-- <div class="input-box">
                      <span class="details">Fee reciept :</span>
                      <input class="form-control" type="file" placeholder="fd" required>
                    </div> -->



                        <div class="button">
                            <button type="submit" class="btn btn-lg btn-primary" value="register">Register</button>
                        </div>
                    </form>

                </div>
            </div>

        </div>

        <style>
            .title {
                text-align: center;
                margin-bottom: 0%;
                padding-bottom: 1%;

            }

            .container {
                padding-top: 1em;
            }

            body {
                padding-top: 1em;
                background: linear-gradient(135deg, #71b7e6, #9b59b6);


            }

            .input-box {
                margin: 10px 0;
            }
        </style>




</body>

</html>